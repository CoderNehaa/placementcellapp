<div
  class="d-flex flex-column align-items-center justify-content-center"
  style="margin: 15px auto"
>
  <h3>Update Student</h3>
  <form class="w-50 border p-4 m-2" method="post" action="/edit-student">
    <input
      type="text"
      class="form-control"
      id="id"
      name="id"
      value="<%=student._id%>"
      hidden
    />
    <div class="mb-3">
      <label for="name" class="form-label">Student Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="<%=student.name%>"
        placeholder="Enter student name"
        required
      />
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        placeholder="Enter email address"
        value="<%=student.email%>"
        required
      />
    </div>

    <div class="mb-3">
      <label for="collegeName" class="form-label">College Name</label>
      <input
        type="text"
        class="form-control"
        id="collegeName"
        name="collegeName"
        value="<%=student.collegeName%>"
        placeholder="Enter student college name"
        required
      />
    </div>

    <div class="mb-3">
      <label class="form-label" for="status">Placement status</label>
      <select class="form-select" id="status" name="status" required>
        <option value="placed">Placed</option>
        <option value="notPlaced">Not placed</option>
      </select>
    </div>

    <div class="mb-3">
      <label for="batch" class="form-label">Student Batch</label>
      <input
        type="text"
        class="form-control"
        id="batch"
        name="batch"
        value="<%=student.batch%>"
        placeholder="Enter student batch"
        required
      />
    </div>

    <div class="mb-3">
      <label class="form-label">Test Score</label>
      <div class="d-flex">
        <input
          type="text"
          class="form-control me-2"
          id="dsaScore"
          name="dsaScore"
          value="<%=student.dsaScore%>"
          placeholder="Enter DSA score"
          required
        />

        <input
          type="text"
          class="form-control me-2"
          id="webScore"
          name="webScore"
          value="<%=student.webScore%>"
          placeholder="Enter Web dev score"
          required
        />

        <input
          type="text"
          class="form-control"
          id="reactScore"
          name="reactScore"
          value="<%=student.reactScore%>"
          placeholder="Enter React score"
          required
        />
      </div>
    </div>

    <div class="d-flex justify-content-end">
      <button class="btn btn-info">Update</button>
      <a href="/dashboard" class="btn btn-danger ms-2">Cancel</a>
    </div>
  </form>
</div>
