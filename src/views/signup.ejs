<div
  class="d-flex flex-column align-items-center justify-content-center"
  style="margin: 24px auto"
>
<h2 class="mb-4">Placement cell app</h2>
  <h4>Create your account</h4>
  
  <form class="w-50 border p-4 m-2" method="post" action="/signup">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="name" required />
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        required
      />
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
      />
    </div>

    <div class="mb-3">
      <label for="confirmPassword" class="form-label">Confirm password</label>
      <input
        type="password"
        class="form-control"
        id="confirmPassword"
        name="confirmPassword"
      />
    </div>

    <% if(errorMsg != undefined){ %>
    <div class="text-danger fw-bold text-capitalize mb-3"><%= errorMsg %></div>
    <% } %>

    <button type="submit" class="btn btn-primary">Sign Up</button>
  </form>
  <a href="/signin" style="text-decoration: none; color: maroon;" class="fw-semibold">Already have an account? Sign in to your account</a>
</div>
